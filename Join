create table customers(cusid int(30),name varchar(30),age int(30),address varchar(30),salary int(30));
insert into customers values(1,'rahesh',34,'cbe',5000);
insert into customers values(2,'ram',27,'abe',7000);
insert into customers values(3,'raj',18,'vbn',700);
insert into customers values(4,'sam',22,'dffg',50500);
insert into customers values(5,'som',30,'asd',5000);
select * from customers;
create table orders(orderid int(30),cusid int(30),product varchar(30));
insert into orders values(10,2,'laptop');
insert into orders values(11,3,'tab');
insert into orders values(12,4,'mobile');
select * from orders;
select name,address,salary from customers inner join orders on customers.cusid=orders.cusid;
select name,address,salary from customers left join orders on customers.cusid=orders.cusid;
select name,address,salary from customers right join orders on customers.cusid=orders.cusid;
